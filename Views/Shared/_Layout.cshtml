<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TP_Final_4IC</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TP_Final_4IC.styles.css" asp-append-version="true" />


</head>
<body>
    <header>
    @if (ViewBag.MostrarNavbar == null || ViewBag.MostrarNavbar){
    <nav class="navbar">
   
    <div class="touch">
      <div class="menu-toggle" id="menu-toggle">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </div>
    </div>


      <a href='@Url.Action("Index", "Home")' class="logo">PelisFlix</a>
      <div class="search">
        <div class="container">
          <input type="text" name="text" autofocus class="input" required="" placeholder="Type to search...">
        </div>
      </div>
      @if (@ViewBag.Usuario.UserName != "") {
      <a class="user" href='@Url.Action("Perfil", "Home")'>
        <span style="color:white; textDecoration:none;">@ViewBag.Usuario.UserName</span>
        <div href="perfil.html">
            <img
          src="https://static.vecteezy.com/system/resources/previews/019/879/186/non_2x/user-icon-on-transparent-background-free-png.png"
          alt="User Icon">
        </div>
      </a>
      } else {
        <a class="iniciarSesion" href='@Url.Action("ViewLogin", "Home")'>Iniciar Sesion</a>
      }

    </nav>
    <div class="mobile-menu" id="mobile-menu">
      <div class="close-button" id="close-button">X</div>
      <a href='@Url.Action("Index", "Home")'><i class="fas fa-home"></i> Inicio</a>
      <a href='@Url.Action("Filtrado", "Home")'><i class="fas fa-film"></i> Filtado</a>
      <a href='@Url.Action("Reseñas", "Home")'><i class="fas fa-newspaper"></i> Publicaciones</a>
            @if (@ViewBag.Usuario.UserName != "") {
              <a href='@Url.Action("Perfil", "Home")'><i class="fas fa-user"></i> Perfil</a>
            } else {
                   <a class="iniciarSesionMenu" href='@Url.Action("ViewLogin", "Home")'><i class="fas fa-user"></i> Iniciar Sesion</a>
            }
    </div>
        }
  </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>